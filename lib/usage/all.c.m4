bool
hidrd_usage_valid(hidrd_usage usage)
{
    uint32_t min = (uint32_t)HIDRD_USAGE_MIN;
    uint32_t max = (uint32_t)HIDRD_USAGE_MAX;
    uint32_t u = (uint32_t)usage;

    return (u >= min) && (u <= max);
}


